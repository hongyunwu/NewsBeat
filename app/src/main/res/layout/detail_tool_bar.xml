<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/tab_bg_color"
    app:theme="@style/DetailToolBarStyle"
    app:popupTheme="@style/DetailToolBarPopupStyle"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/author_pic"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/page_horizontal"
            android:layout_marginRight="@dimen/page_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_text_color"
                android:textSize="@dimen/detail_author_text_size"
                android:text="伍洪云"
                android:id="@+id/author_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tab_text_color"
                android:textSize="@dimen/detail_date_text_size"
                android:text="2017-09-12 13:41"
                android:id="@+id/date"/>
        </LinearLayout>

        <Button
            android:layout_width="@dimen/detail_follow_width"
            android:layout_height="@dimen/detail_follow_height"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/follow_btn_selector"
            android:drawableLeft="@drawable/add_follow"
            android:gravity="center"
            android:paddingLeft="@dimen/detail_follow_padding"
            android:paddingRight="@dimen/detail_follow_padding"
            android:text="@string/follow"
            android:textSize="@dimen/detail_author_text_size"
            android:textColor="@color/color_white"
            android:id="@+id/add_follow"/>

    </LinearLayout>

</android.support.v7.widget.Toolbar>