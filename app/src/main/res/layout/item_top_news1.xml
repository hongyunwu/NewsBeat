<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_top_news"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/page_horizontal"
    android:paddingRight="@dimen/page_horizontal"
    android:background="@drawable/news_item_selector"
    android:paddingTop="@dimen/page_horizontal"
    android:paddingBottom="@dimen/page_horizontal"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="@dimen/width_0"
        android:layout_weight="@integer/weight_2"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/page_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是标题"
            android:id="@+id/title"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/normal_text_size"
            android:includeFontPadding="false"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_0"
            android:layout_weight="@integer/weight_1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/comments"
                android:textSize="@dimen/item_comments_text_size"
                android:text="评论"
                android:drawablePadding="@dimen/content_pic_margin"
                android:includeFontPadding="false"
                android:id="@+id/comments"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_comments_text_size"
                android:id="@+id/author"
                android:text="人民日报海外"
                android:paddingRight="@dimen/page_horizontal"
                android:layout_marginLeft="@dimen/item_author_margin_left"
                />
            <ImageView
                android:layout_width="@dimen/width_0"
                android:layout_weight="@integer/weight_1"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delete"
                android:background="@drawable/delete"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/width_0"
        android:layout_weight="@integer/weight_1"
        android:id="@+id/thumb_01"
        android:src="@drawable/thumb_default"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/top_item_thumb_pic_height3"/>
</LinearLayout>