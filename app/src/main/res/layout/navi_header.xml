<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/navi_header_layer"
                android:orientation="vertical">

    <TextView
        android:id="@+id/wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/page_vertical"
        android:layout_marginLeft="@dimen/page_horizontal"
        android:text="西北风1级"
        android:textColor="@color/color_white"
        android:textSize="@dimen/tab_text_size"/>

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/wind"
        android:layout_marginLeft="@dimen/content_pic_margin"
        android:layout_toRightOf="@id/wind"
        android:text="湿度71%"
        android:textColor="@color/color_white"
        android:textSize="@dimen/tab_text_size"/>

    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/wind"
        android:layout_alignLeft="@id/wind"
        android:layout_marginBottom="@dimen/page_horizontal"
        android:text="上海市"
        android:textColor="@color/color_white"
        android:textSize="@dimen/tab_text_size"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/city_name"
        android:layout_alignLeft="@id/wind"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/page_horizontal">
        <ImageView

            android:id="@+id/weather_pic"
            android:layout_width="@dimen/weather_pic_width"
            android:layout_height="@dimen/weather_pic_width"

            android:background="@drawable/weather_sun"/>
        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30℃"
            android:layout_marginLeft="@dimen/content_pic_margin"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_white"
            android:textSize="@dimen/weather_temp_size"

            />
    </LinearLayout>






</RelativeLayout>